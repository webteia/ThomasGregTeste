@model IEnumerable<ThomasGregTeste.Business.Models.ClienteViewModel>
@{
    ViewData["Title"] = "Todos os Clientes";
}
<div class="container">
    <div class="row">
        @if (@TempData["Message"] != null)
    {
        <div class="row">
            <div class="alert alert-success" role="alert">
                    @TempData["Message"]
            </div>
        </div>
    }
    </div>
    <div class="row">
        
            <a class="navbar-brand" asp-area="" asp-controller="Cliente" asp-action="Create">Cadastrar Novo Cliente</a>
        
    </div>@if (Model.Count() > 0)
    {
        <div class="row">

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Email</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in Model)
                    {
                        <tr>
                            <th>@emp.Id</th>
                            <th>@emp.Nome</th>
                            <td>@emp.Email</td>
                            <td>
                                <a asp-controller="Cliente" asp-action="Details" asp-route-id="@emp.Id">Detalhes</a>  |
                                <a asp-controller="Logradouro" asp-action="Create" asp-route-id="@emp.Id">Cadastrar Logradouro</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }else{
        <div class="row alert alert-warning" role="alert">
            Nenhum Cliente Cadastrado
            </div>
    }
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>